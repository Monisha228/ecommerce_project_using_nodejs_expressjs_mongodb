<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>


<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
.dropbtn {
 color:black;
 padding: 16px;
 font-size: 16px;
 border: none;
  background-color: #ffbae2;
}

.dropdown {
 position: relative;
 display: inline-block;
}
.dropdown-content {
 display: none;
 position: absolute;
 min-width: 160px;
 box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
 z-index: 1;
}
.dropdown-content a {
 color: #7f5d71;
 padding: 12px 16px;
 text-decoration: none;
 display: block;
}
.dropdown-content{
	background-color: #ffbae2;
}
.dropdown:hover .dropdown-content {
	display: block;
}
</style>
{{# if products}}
<div class="row" style="margin-left: 371px; margin-top: 23px;">
<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
<h2>My Wishlist</h2>
<ul class="list-group">
 {{# each products }}
	<li class="list-group-item">
		<span style="color:black;" class="badge">{{ this.quty }}</span>
		<strong>{{ this.item.title }}</strong>&nbsp;&nbsp;&nbsp;&nbsp;
		<img height="70px" width="70" src="{{ this.item.imagePath }}">
		<span class="label label-success">Rs.{{ this.price }}</span>
		<div class="dropdown">
		<button class="dropbtn btn btn-success">Action</button>
			<div class="dropdown-content">
				<a href="/reduced/{{ this.item._id}}">Reduce by 1</a>
				<a href="/removed/{{ this.item._id}}">Delete All</a>
				<a href="/add-wishto-cart/{{ this.item._id}}">Add to cart</a>
			</div>
		</div>
	 </li>
 {{/each}}
</ul>
</div>
</div>
<div class="row" style="margin-left: 371px;margin-top: 23px;">
<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	<strong>Total:{{ totalPrice }}</strong>
</div>
</div>
<hr>
<div class="row" style="margin-left: 371px;margin-top: 23px;">
<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
<a href="/checkout" type="button" class="bun btn-success">Proceed to Pay</a>
</div>
</div>
{{ else }}
<div class="row">
<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
<h2>Your Wishlist is Empty</h2>
</div>
</div>
{{/if}}