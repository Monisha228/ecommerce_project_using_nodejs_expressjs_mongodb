<div class="box-form">
	<div class="left">
		<div class="overlay">
		<h1>Welcome Ecomm.</h1>
		<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.
		Curabitur et est sed felis aliquet sollicitudin</p>
		<span>
			<p>Login with social media</p>
			<a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
			<a href="#"><i class="fa fa-twitter" aria-hidden="true"></i> Login with Twitter</a>
		</span>
		</div>
	</div>
	

    {{#if hasError}}
<div>
{{#each messages}}
 <h3>{{this}}</h3>
 {{/each}}
</div>
{{/if}}
	
		<div class="right">
		<h5>Register</h5>
		<p>Already have an account? <a href="/user/signin">Login</a> it takes less than a minute</p>
		
    {{#if hasError}}
<div>
{{#each messages}}
 <h3>{{this}}</h3>
 {{/each}}
</div>
{{/if}}
    <div class="inputs">
            <form action="/user/signup" method="post">
		 <input type="email" name="email" id="email" placeholder="Enter Email" required><br><br>

        <input type="password" name="password" id="password" placeholder="Enter Password" required><br><br>

            <input type="hidden" name="_csrf" value="{{ csrfToken }}"><br><br>
                    <br>
                    <button>Register</button>
                    </form>
                </div>
		</div>
			
			<br><br>
			
</div>
<!-- partial -->
  
</body>
</html>




